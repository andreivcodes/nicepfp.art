{
  "name": "nicepfp.art",
  "packageManager": "yarn@3.1.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "start-hardhat": "npm run dev --workspace=nicepfp.art-hardhat",
    "start-frontend": "npm run dev --workspace=nicepfp.art-frontend",
    "start": "npm-run-all --parallel start-hardhat start-frontend",
    "predeploy": "npm run build --workspace=nicepfp.art-frontend",
    "deploy": "npm run gh-pages -d build --workspace=nicepfp.art-frontend"
  },
  "workspaces": [
    "workspaces/*"
  ],
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
