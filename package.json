{
  "name": "nicepfp",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install",
    "db:migrate:latest": "pnpm --filter @nicepfp/database migrate:latest",
    "db:migrate:down": "pnpm --filter @nicepfp/database migrate:down",
    "db:migrate:make": "pnpm --filter @nicepfp/database migrate:make"
  },
  "devDependencies": {
    "husky": "^8.0.0",
    "prettier": "^3.2.5",
    "turbo": "^1.12.5",
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
